<odoo>
   <record id="view_production_lot_form" model="ir.ui.view">
        <field name="name">stock.production.lot.form.ext</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" postion="before">
                <button name="calculate_lot_price" icon="fa-cubes" string="Calculate Price" type="object" class="btn-primary"/>
            </xpath>
            <xpath expr="//div[hasclass('oe_button_box')]" postion="after">
                <field name="scale_read" invisible="1"/>
                <div class="alert alert-warning text-left" role="alert" attrs="{'invisible': [('scale_read', '=', False)]}">
                    Scale weight detection active.
                </div>
            </xpath>
            <xpath expr="//page[@name='description']" position="before">
                <page string="Pieces" name="pieces">
                    <field nolabel="1" name="pieces_ids" widget="x2many_field_refresher">
                        <tree editable="bottom">
                            <field name="product_id"/>
                            <field name="weight"/>
                            <field name="price"/>
                            <button name="print_sticker" type="object" string="Print sticker" class="btn-primary"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            <field name="ref" position="before">
                <field name="weight_price"/>
            </field>
        </field>
    </record>
</odoo>
