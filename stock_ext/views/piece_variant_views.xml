<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_piece_variant_tree" model="ir.ui.view">
        <field name="name">view.piece.variant.tree</field>
        <field name="model">piece.variant</field>
        <field name="arch" type="xml">
            <tree string="Piece Variant" editable="bottom">
                <field name="min_weight"/>
                <field name="max_weight"/>
                <field name="value"/>
            </tree>
        </field>
    </record>

    <record id="piece_variant_action" model="ir.actions.act_window">
        <field name="name">Piece Variants</field>
        <field name="res_model">piece.variant</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_piece_variant"
              action="piece_variant_action"
              parent="stock.menu_stock_inventory_control"
              sequence="6"
              groups="stock.group_production_lot"/>
</odoo>
