<odoo>
   <record id="view_production_lot_form" model="ir.ui.view">
        <field name="name">stock.production.lot.form.ext</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" postion="before">
                <button name="calculate_lot_price" icon="fa-cubes" string="Calculate Price" type="object" class="btn-primary"/>
            </xpath>
            <field name="ref" position="before">
                <field name="weight_price"/>
            </field>
        </field>
    </record>
</odoo>
