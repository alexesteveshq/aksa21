<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.ext</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='product_setting_container']" position="after">
                <h2>Retail</h2>
                <div class="row mt16 o_settings_container" name="shipping_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="retail_settings">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="stock_move_email_validation" string="Variant amount"/>
                            <div class="content-group">
                                <field name="retail_variant_amount"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
