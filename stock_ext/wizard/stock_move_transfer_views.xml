<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_move_transfer_wizard_form" model="ir.ui.view">
        <field name="name">stock.move.transfer.wizard</field>
        <field name="model">stock.move.transfer</field>
        <field name="arch" type="xml">
            <form string="Create transfer">
                <group>
                    <field name="partner_id" required="1"/>
                    <field name="location_id" required="1"/>
                    <field name="location_dest_id" required="1"/>
                </group>
                <footer>
                    <button name="create_transfer" string="Create" type="object"
                            class="btn btn-sm btn-primary"/>
                    <button string="Cancel" class="btn btn-sm btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
