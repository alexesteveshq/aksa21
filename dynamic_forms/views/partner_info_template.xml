<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="partner_info_template" name="Partner Info">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure">
                <section class="pt8 pb8">
                    <div class="container s_allow_columns">
                        <div class="row" style="margin-top: 50px">
                            <div class="col-lg-4 mt-4 mt-lg-0">
                                <ul class="list-unstyled mb-0 ps-2">
                                    <li t-if="partner.contact_address"><i class="fa fa-map-marker fa-fw me-2"/><span class="o_force_ltr"><t t-esc="partner.contact_address"/></span></li>
                                    <li t-if="partner.phone"><i class="fa fa-phone fa-fw me-2"/><span class="o_force_ltr"><t t-esc="partner.phone"/></span></li>
                                    <li t-if="partner.email"><i class="fa fa-1x fa-fw fa-envelope me-2"/><span><t t-esc="partner.email"/></span></li>
                                    <li t-if="partner.website"><i class="fa fa-1x fa-fw fa-globe me-2"/><a href="partner.website"><t t-esc="partner.website"/></a></li>
                                </ul>
                            </div>
                            <div class="col-lg-8 mt-4 mt-lg-0" style="border-left: 1px solid black;">
                                <h2 class="pt16 main-partner-info"><t t-esc="partner.name"/></h2>
                                <p>
                                    <t t-esc="partner.comment"/>
                                </p>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>
</odoo>
