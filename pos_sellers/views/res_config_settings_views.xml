<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.point_of_sale.pos_ext</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='payment_methods_new']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="payment_sellers">
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Payment Sellers</span>
                        <div class="text-muted">
                            Payment sellers available
                        </div>
                        <div class="content-group mt16">
                            <field name="pos_payment_seller_ids" colspan="4" nolabel="1" widget="many2many_tags" attrs="{'readonly': [('pos_has_active_session','=', True)], 'required': [('pos_company_has_template', '=', True)]}" options="{'no_create': True}" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
