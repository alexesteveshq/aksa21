<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="currency_update_rate_wizard_form" model="ir.ui.view">
        <field name="name">currency.update.rate.wizard</field>
        <field name="model">currency.update.rate</field>
        <field name="arch" type="xml">
            <form string="Update rate">
                <group>
                    <field name="date" required="1"/>
                    <field name="rate" required="1"/>
                </group>
                <footer>
                    <button name="update_rate" string="Update" type="object"
                            class="btn btn-sm btn-primary"/>
                    <button string="Cancel" class="btn btn-sm btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
