<odoo>
    <record id="product_normal_form_view_ext" model="ir.ui.view">
        <field name="name">product.product.form.ext</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sale_ok']/.." position="after">
                <span class="d-inline-block">
                    <field name="gram_retail_calculation"/>
                    <label for="gram_retail_calculation"/>
                </span>
            </xpath>
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="lot_id"/>
                <field name="raw_data"/>
                <field name="retail_variant"/>
                <field name="retail_price_untaxed"/>
                <field name="price_usd"/>
                <field name="price_mxn"/>
            </xpath>
        </field>
    </record>

    <record id="stock.stock_product_normal_action" model="ir.actions.act_window">
        <field name="view_mode">tree,form,kanban,pivot</field>
    </record>
</odoo>
