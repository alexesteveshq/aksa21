<odoo>
    <template id="report_stock_count_piece_wizard">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <h2>Stock Count Report</h2>
                    <p><strong>Company:</strong> <t t-esc="doc.env.company.name"/></p>
                    <p><strong>Date:</strong> <t t-esc="doc.date"/></p>

                    <!-- Spare Pieces Section (Spare Pieces first) -->
                    <h3 style="margin-bottom: 10px;">Spare Pieces</h3>
                    <div style="margin-bottom: 20px;">
                        <!-- Header Row for Spare Pieces -->
                        <div style="display: flex; font-weight: bold; padding: 8px; border-bottom: 1px solid #000;">
                            <div style="flex: 1; padding: 0 10px;">Piece</div>
                            <div style="flex: 1; padding: 0 10px;">Code</div>
                        </div>

                        <!-- Grouping Rows into Blocks of 5 -->
                        <t t-if="doc.spare_product_ids">
                            <t t-foreach="range(0, len(doc.spare_product_ids), 5)" t-as="block_index">
                                <div style="page-break-inside: avoid;">
                                    <t t-foreach="doc.spare_product_ids[block_index:block_index+5]" t-as="product">
                                        <div style="display: flex; justify-content: space-between; padding: 8px;
                                                    border-bottom: 1px solid #000;">
                                            <div style="flex: 1; padding: 0 10px; word-wrap: break-word;">
                                                <t t-esc="product.display_name"/>
                                            </div>
                                            <div style="flex: 1; padding: 0 10px; word-wrap: break-word;">
                                                <t t-esc="product.barcode"/>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </t>
                        </t>
                        <t t-if="not doc.spare_product_ids">
                            <p>No spare pieces found.</p>
                        </t>
                    </div>

                    <!-- Missing Pieces Section -->
                    <h3 style="margin-bottom: 10px;">Missing Pieces</h3>
                    <div style="margin-bottom: 20px;">
                        <!-- Header Row for Missing Pieces -->
                        <div style="display: flex; font-weight: bold; padding: 8px; border-bottom: 1px solid #000;">
                            <div style="flex: 1; padding: 0 10px;">Piece</div>
                            <div style="flex: 1; padding: 0 10px;">Code</div>
                        </div>

                        <!-- Grouping Rows into Blocks of 5 -->
                        <t t-if="doc.missing_product_ids">
                            <t t-foreach="range(0, len(doc.missing_product_ids), 5)" t-as="block_index">
                                <div style="page-break-inside: avoid;">
                                    <t t-foreach="doc.missing_product_ids[block_index:block_index+5]" t-as="product">
                                        <div style="display: flex; justify-content: space-between; padding: 8px;
                                                    border-bottom: 1px solid #000;">
                                            <div style="flex: 1; padding: 0 10px; word-wrap: break-word;">
                                                <t t-esc="product.display_name"/>
                                            </div>
                                            <div style="flex: 1; padding: 0 10px; word-wrap: break-word;">
                                                <t t-esc="product.barcode"/>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </t>
                        </t>
                        <t t-if="not doc.missing_product_ids">
                            <p>No missing pieces found.</p>
                        </t>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
