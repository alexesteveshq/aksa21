<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="balance_amounts_wizard_form" model="ir.ui.view">
        <field name="name">balance.amounts.wizard.form</field>
        <field name="model">balance.amounts.wizard</field>
        <field name="arch" type="xml">
            <form string="Balance Amounts">
                <group>
                    <field name="balance_attachment" required="1"/>
                </group>
                <footer>
                    <button name="balance_amounts" string="Balance" type="object"
                            class="btn btn-sm btn-primary"/>
                    <button string="Cancel" class="btn btn-sm btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
