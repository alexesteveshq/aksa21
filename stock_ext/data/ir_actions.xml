<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_create_piece_product" model="ir.actions.server">
        <field name="name">Create products</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_stock_piece" />
        <field name="binding_model_id" ref="model_stock_piece" />
        <field name="state">code</field>
        <field name="code">records.create_products()</field>
    </record>

    <record id="action_create_from_piece" model="ir.actions.server">
        <field name="name">Create from piece</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_stock_piece" />
        <field name="binding_model_id" ref="model_stock_piece" />
        <field name="state">code</field>
        <field name="code">records.create_from_piece()</field>
    </record>

    <record id="action_print_sticker" model="ir.actions.server">
        <field name="name">Print sticker</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_stock_move_line"/>
        <field name="binding_model_id" ref="model_stock_move_line" />
        <field name="state">code</field>
        <field name="code">records.print_sticker_retail()</field>
    </record>

    <record id="action_update_piece_lot" model="ir.actions.server">
        <field name="name">Update piece lot</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_stock_piece"/>
        <field name="binding_model_id" ref="model_stock_piece" />
        <field name="state">code</field>
        <field name="code">records.update_product_lot()</field>
    </record>

    <record id="action_piece_print_sticker" model="ir.actions.server">
        <field name="name">Print sticker</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_stock_piece"/>
        <field name="binding_model_id" ref="model_stock_piece" />
        <field name="state">code</field>
        <field name="code">records.print_sticker_wholesale()</field>
    </record>

    <record id="action_variant_print_sticker" model="ir.actions.server">
        <field name="name">Print sticker</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_product_product"/>
        <field name="binding_model_id" ref="model_product_product" />
        <field name="state">code</field>
        <field name="code">records.print_sticker_wholesale()</field>
    </record>

    <record id="action_stock_move_transfer" model="ir.actions.act_window">
        <field name="name">Create transfer</field>
        <field name="res_model">stock.move.transfer</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="stock.model_stock_move"/>
        <field name="binding_view_types">list</field>
    </record>
</odoo>
